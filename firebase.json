{
  "hosting": {
    "public": "web/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/myfunction",  // <-- CHANGE THIS to your desired URL path
        "function": "my_http_function" // <-- CHANGE THIS to your actual function name
      },
      {
        "source": "**",               
        "destination": "/index.html"  
      }
    ]
  },
  "functions": {
    "source": "python_functions",
    "runtime": "python312"
  }
}